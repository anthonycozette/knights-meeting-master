<div class="container">
    {% for com in commentaires %}
            {# <div class="row justify-content-center"> #}
                {# <div class="col-12 col-md-10 col-lg-9 col-xl-8" id="even"> #}
                    <div class="card card-row shadow-light-lg mb-1" id="even">
                        <div class="row gx-0">
                            {# body #}
                            <div class="card-body">
                                <div class="mb-0 text-center">
                                    <p id="text">
                                        {{ com.contenu|raw }}
                                    </p>
                                    <div>
                                        <span class="h6 text-uppercase">
                                            Par
                                            {{ com.nom }}
                                            le
                                            {{ com.createdAt|date('d/m/Y') }}
                                        </span>
                                    </div>
                                </div>
                            {# </div> #}
                        </div>
                    </div>
                </div>
            {# </div> #}
    {% endfor %}
</div>
