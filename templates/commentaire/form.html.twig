<div class="pt-6 pt-md-8">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 d-flex justify-content-center">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">

						{{ message }}
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>


	<div class="container pt-6 pt-md-8 mt-1">
		<div class="row justify-content-center">
			<div class="col-12 d-flex justify-content-center">
				<!-- Button trigger modal -->
				<button type="button" class="btn btn-primary mt-5" id="bouton-rouge" data-bs-toggle="modal" data-bs-target="#commentaire">
					Laisser un commentaire
				</button>
			</div>
		</div>
	</div>


<!-- Modal -->
<div class="modal fade" id="commentaire" tabindex="-1" aria-labelledby="commentaire" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">
					Laisser un commentaire
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="form-group">
					{{ form_start(form) }}
					{{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_row(form.contenu, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					<input type="submit" value="Publier" class="btn btn-primary" id="bouton-or">
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
