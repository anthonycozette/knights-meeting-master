{% extends 'base.html.twig' %}

{% block title %}
	detail
{% endblock %}

{% block body %}

<div class="row mt-3" id="even">
<div class="col-8">
	<div class="text-center">
		<h2>
			{{ evenement.nom }}
		</h2>
	</div>

	<img src="{{ vich_uploader_asset(evenement, 'imageFile') }}" alt="">

	<div class="mt-5" id="text">
		{{ evenement.description|raw }}
	</div>
</div>
<div class="col-4 mt-5">
		<div class="detail-even">
			<div class="detail-date">
                <div>
                    <i class="far fa-calendar-alt"></i>
                </div>
                {{ evenement.dateDebut|date('d-m-Y') }}
                au
                {{ evenement.dateFin|date('d-m-Y') }}
		    </div>
            <div class="even-adresse">
                <div>
                    <div>
						<i class="fas fa-map-marked-alt"></i>
					</div>
                    {{ evenement.adresse }}
                </div>
                <div>
                    {{ evenement.codePostal }}
                    {{ evenement.ville }}
                </div>
            </div>
            <div class="even-prix">
                <div>
					<i class="far fa-money-bill-alt"></i>
				</div>
                {{ evenement.prix }}
                â‚¬
            </div>
	    </div>
    </div>
{% if is_granted('ROLE_USER') %}
	{% include "commentaire/form.html.twig" %}
{% endif %}
<div>
<h4>Commentaires :</h4>
</div>
{% include "commentaire/commentaires.html.twig" %}

</div>
<div>
	<a href="{{ path('user') }}" class="btn btn-dark mt-2 mb-2">
		Retour a la liste
	</a>
</div>
{% endblock %}
