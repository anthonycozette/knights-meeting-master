{% extends 'base.html.twig' %}

{% block title %}
	modification du profil
{% endblock %}

{% block body %}

	<div class="row">

		<h1>Modification du profile de
			{{app.user.pseudo}}
		</h1>
        
		<div class="col-sm-12">
			<div class="form-group">
				{{ form_start(form) }}
				{{ form_row(form.pseudo, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(form.adresse, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(form.codePostal, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(form.ville, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
			{{ form_row(form.avatar, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group mt-2 mb-2">
				<input type="submit" value="Envoyer" class="btn btn-primary" id="bouton-or">
				<a href="{{ path('user') }}" class="btn btn-dark">
			Retour a la liste
		</a>
			</div>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
